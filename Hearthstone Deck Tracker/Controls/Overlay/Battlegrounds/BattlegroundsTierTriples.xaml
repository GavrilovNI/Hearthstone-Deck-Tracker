<UserControl x:Class="Hearthstone_Deck_Tracker.Controls.Overlay.Battlegrounds.BattlegroundsTierTriples"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Hearthstone_Deck_Tracker.Controls.Overlay.Battlegrounds"
             xmlns:overlay="clr-namespace:Hearthstone_Deck_Tracker.Controls.Overlay"
             mc:Ignorable="d"
             d:DesignHeight="36" d:DesignWidth="60">
    <Canvas Width="60">
        <Border
            Canvas.Left="25"
            Canvas.Top="4"
            BorderBrush="{Binding TextColor, FallbackValue=#747474, RelativeSource={RelativeSource AncestorType=local:BattlegroundsTierTriples}}"
            BorderThickness="1"
            CornerRadius="3"
            Background="#101010"
            Height="26"
        >
            <Label
                Content="{Binding QtyText, FallbackValue=x0, RelativeSource={RelativeSource AncestorType=local:BattlegroundsTierTriples}}"
                Foreground="{Binding TextColor, FallbackValue=#747474, RelativeSource={RelativeSource AncestorType=local:BattlegroundsTierTriples}}"
                FontSize="16" FontWeight="Bold" Margin="3 -5 0 0"
            />
        </Border>
        <overlay:BattlegroundsTier Tier="{Binding Tier, FallbackValue=1, RelativeSource={RelativeSource AncestorType=local:BattlegroundsTierTriples}}" >
            <overlay:BattlegroundsTier.RenderTransform>
                <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
            </overlay:BattlegroundsTier.RenderTransform>
        </overlay:BattlegroundsTier>
    </Canvas>
</UserControl>

