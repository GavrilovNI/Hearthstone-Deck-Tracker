<UserControl x:Class="Hearthstone_Deck_Tracker.Controls.Overlay.OpponentUpload"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             xmlns:local="clr-namespace:Hearthstone_Deck_Tracker"
             mc:Ignorable="d">
    <Border Background="#23272A" BorderBrush="#141617" BorderThickness="1" CornerRadius="3" Margin="0,5,0,0" Visibility="{Binding UploadVisibility, Mode=OneWay}" MaxWidth="352" MouseDown="OpponentUpload_MouseDownAsync">
        <Grid>
                <TextBlock Foreground="White" FontSize="14" TextWrapping="Wrap" Margin="10 10 30 10">
                        <Run Text="{Binding Message, Mode=OneWay}"/>
                </TextBlock>
            <Rectangle Width="14" Height="14" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" MouseDown="CloseOpponentUpload_MouseDown" Visibility="{Binding CloseAverageDamageInfoVisibility}">
                <Rectangle.Fill>
                    <VisualBrush Visual="{StaticResource appbar_close_white}" />
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
    </Border>
</UserControl>
